<html lang="en">
  <head>
    {{>header}}
  </head>

  <body>
  {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp_form" >
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">                    
                </form>
            </div>
            
            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day">Friday</p>
                    <p id="today_date">22 May</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Temperature Here</p> 
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="tempUnit">0</span><sup>o</sup>C</p>
                        <p><i id="temp_status1" class="fa fa-cloud" aria-hidden="false"></i></p>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
    <!-- footer -->
    {{>footer}}
    <script src="js/main.js">
    </script>
    <script>
      const getCurrentDay=()=>{
        let weekdays=new Array(7);
        weekdays[0]="Sunday";
        weekdays[1]="Monady";
        weekdays[2]="Tuesday";
        weekdays[3]="Wednesday";
        weekdays[4]="Thursday";
        weekdays[5]="Friday";
        weekdays[6]="Saturday";

        let currentTime=new Date();
        days=weekdays[currentTime.getDay()];
        let day=document.getElementById('day');
        day.innerText=days;
      }
      getCurrentDay();
    </script>
  </body>
</html>